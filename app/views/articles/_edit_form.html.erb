<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>
    <%= f.input :title, label: "Article title:", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Title here...", autofocus: true %><br />
    <%= f.input :text, label: "Write your article:", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Article content here..." %>
    <br>
    <div class="columns">
      <div class="column">
        <%= f.input :image, label: "Select image:", input_html: { class: "file" }, wrapper: false, label_html: {class: "label"} %>
      </div>
    </div>
    <br>
    <%= f.button :submit, class: "button is-accent px-4" %>
<% end %>
