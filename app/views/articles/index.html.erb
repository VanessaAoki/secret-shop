<p id="notice"><%= notice %></p>

<div class="columns articles-home is-multiline mt-1">
  <%# MAIN IMAGE %>
  <div class="column p-0 article-main is-9">
    <section><%= render 'main' %></section>
    <%= image_tag ("/assets/international.jpg"), class:'article-main-image' %>
  </div>
  <%# EVENTS SECTION %>
  <div class="events-aside column p-0 article-side is-3">
    <section><%= render 'categories/events' %></section>
  </div>
  <%# FIRST %>
  <div class="column p-0 article-categories is-3">
    <section><%= render 'categories/first' %></section>
    <div class="dummy"></div>
    <%= image_tag ("/assets/val.jpg"), class:'article-categories-image' %>
  </div>
  <%# SECOND %>
  <div class="column p-0 article-categories is-3">
    <section><%= render 'categories/second' %></section>
    <div class="dummy"></div>
    <%= image_tag ("/assets/lol.jpg"), class:'article-categories-image' %>
  </div>
  <%# THIRD %>
  <div class="column p-0 article-categories is-3">
    <section><%= render 'categories/third' %></section>
    <div class="dummy"></div>
    <%= image_tag ("/assets/csgo.webp"), class:'article-categories-image' %>
  </div>
  <%# FOURTH %>
  <div class="column p-0 article-categories is-3">
    <section><%= render 'categories/fourth' %></section>
    <div class="dummy"></div>
    <%= image_tag ("/assets/dota.jpg"), class:'article-categories-image' %>
  </div>
</div>

<%# PATCH NOTES %>
<div class="columns patch-notes my-6 ml-4 mr-2">
  <div class="column is-9 patch-image-container p-0">
    <section><%= render 'categories/patch' %></section>
    <%= image_tag ("/assets/tft.jpg"), class:'patch-image' %>
  </div>
  <div class="column is-3 p-0 patch-aside-container my-2">
    <ul class="is-flex is-flex-direction-column px-6">
      <h1 class="has-text-accent has-text-weight-semibold is-family-monospace is-uppercase">Latest Patch Notes</h1>
      <%= show_patch_article_list(@articles) %>
    </ul>
  </div>
</div>

<%# NEWS ARTICLES %>
<div class="columns articles-home is-multiline">
  <%= show_new_article_list(@articles) %>
</div>
