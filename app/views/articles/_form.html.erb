<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :title, label: "What's the title of your article?", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Incredible title here...", autofocus: true %><br />
      <%= f.input :text, label: "Fill the content of your article:", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Awesome content article here..." %>
      <br>
      <%= f.input :image, label: "Select your image", input_html: { class: "file" }, wrapper: false, label_html: {class: "label"} %>
      <br>
      <%= fields_for(@selected) do |s| %>
      <strong><%= s.label :categories %></strong><br><br>
      <%= s.collection_select(:selected_id, @categories, :id, :name, {selected: 2, include_hidden: false}, { multiple: true }) %>
    <% end %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-dark" %>
<% end %>
