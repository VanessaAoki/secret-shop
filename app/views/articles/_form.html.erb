<%= form_for(@article) do |form| %>
  <%= form.text_field :title, id: :article_title, class: 'post-box box mt-6', placeholder: 'Title' %>
  <%= form.text_field :text, id: :article_text, class: 'post-box box mt-6', placeholder: 'Text' %>
      <%= form.file_field :image %>
    <%= form.error_notification message: form.object.errors[:base].to_sentence if form.object.errors[:base].present? %>
  <br>
    <%= collection_check_boxes(:category, :category_ids, Category.all, :id, :name) do |b| %>
      <%= b.label { b.check_box + b.text }%>
    <% end %>
    
  <%= form.submit %>
  <%= link_to 'Cancel', articles_path, class: "button is-dark" %>
<% end %>